@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a>Hello @Html.Raw(User.Identity.GetUserName())!</a>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{ 
    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = "/Home" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li>
                <button type="submit" class="btn btn-discord" id="Discord" name="provider" value="Discord" title="Log in using your Discord">Login with Discord</button>
            </li>
        </ul>
    }

}
